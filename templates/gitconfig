[user]
  name = Kyle Mathews
  email = mathews.kyle@gmail.com
[color]
  diff = auto
  status = auto
  branch = auto
[push]
  default = tracking
[alias]
  ai = add --interactive
  unstage = reset HEAD

  # Committing
  c = commit -v
  cm = commit -m
  ca = commit --amend
  caa = commit -a --amend -C HEAD

  # Shortcuts for commands
  s = status
  a = add
  co = checkout
  b = branch
  l = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit --date=relative
  lc = log ORIG_HEAD.. --stat --no-merges
  f = fetch
  p = push
  d = diff
  dc = diff --cached
  da = diff HEAD
  da2 = diff HEAD^
	wtf = !git-wtf
[core]
	excludesfile = ~/.gitignore_global
  editor = nvim
